@using CadastroEquipamento.Web.Models
@model IEnumerable<VinculoViewModel>
@{
    ViewData["Title"] = "Vincular Equipamentos";
}

<style>
    /* Cores Bradesco */
    .btn-bradesco-red {
        background-color: #E60000;
        color: #FFFFFF;
        border: none;
    }

        .btn-bradesco-red:hover {
            background-color: #B20000;
            color: #FFFFFF;
        }

    .btn-bradesco-black {
        background-color: #000000;
        color: #FFFFFF;
        border: none;
    }

        .btn-bradesco-black:hover {
            background-color: #222222;
        }

    .table thead {
        background-color: #E60000;
        color: #FFFFFF;
    }

    .table tbody tr:hover {
        background-color: #f8f8f8;
    }

    h2 {
        color: #E60000;
        font-weight: 600;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 20px;
    }

    .modal-header {
        background-color: #E60000;
        color: #FFFFFF;
    }

    .modal-footer .btn-primary {
        background-color: #E60000;
        border: none;
    }

        .modal-footer .btn-primary:hover {
            background-color: #B20000;
        }

    .modal-footer .btn-secondary {
        background-color: #000000;
        border: none;
        color: #FFFFFF;
    }

        .modal-footer .btn-secondary:hover {
            background-color: #222222;
        }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2>Vincular Equipamentos</h2>
        <button type="button" class="btn btn-bradesco-red mb-2" data-bs-toggle="modal" data-bs-target="#vincularModal">
            Novo Vínculo
        </button>
    </div>

    <div class="card p-3">
        <div class="table-responsive">
            @if (Model != null && Model.Any(v => v.EquipamentoId != 0 && v.UsuarioId != 0))
            {
                <table class="table table-striped table-bordered align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Equipamento</th>
                            <th>Usuário</th>
                            <th>Data do Vínculo</th>
                            <th style="width:180px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var v in Model.Where(v => v.EquipamentoId != 0 && v.UsuarioId != 0))
                        {
                            <tr>
                                <td>@v.NomeEquipamento</td>
                                <td>@v.NomeUsuario</td>
                                <td>@v.DataVinculo?.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-bradesco-red"
                                            data-equipamentoid="@v.EquipamentoId"
                                            data-usuarioid="@v.UsuarioId"
                                            data-vinculoid="@v.CodVinculo"
                                            onclick="Desvincular(this)">
                                        Desvincular
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center text-muted py-3">
                    Nenhum vínculo registrado.
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de Vinculação -->
<div class="modal fade" id="vincularModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="formVinculo">
                <div class="modal-header">
                    <h5 class="modal-title">Vincular Equipamento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="msgVinculo" class="alert d-none"></div>

                    <div class="mb-3">
                        <label for="EquipamentoSelect" class="form-label">Selecione o Equipamento:</label>
                        <select id="EquipamentoSelect" name="CodEquipamento" class="form-select">
                            <option value="">-- Selecione --</option>
                            @foreach (var e in Model.FirstOrDefault()?.EquipamentoDisponiveis ?? Enumerable.Empty<EquipamentoDropdownViewModel>())
                            {
                                <option value="@e.CodEquipamento">@e.Nome</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="UsuarioSelect" class="form-label">Selecione o Usuário:</label>
                        <select id="UsuarioSelect" name="CodUsuario" class="form-select" disabled>
                            <option value="">-- Selecione --</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary" id="btnVincular" disabled>Vincular</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Vinculo.js"></script>
}