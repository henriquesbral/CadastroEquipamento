@model IEnumerable<CadastroEquipamento.Web.Models.EquipamentoViewModel>
@{
    ViewData["Title"] = "Equipamentos";
}

<style>
    /* Cores Bradesco */
    .btn-bradesco-red {
        background-color: #E60000;
        color: #FFFFFF;
        border: none;
    }

        .btn-bradesco-red:hover {
            background-color: #B20000;
            color: #FFFFFF;
        }

    .btn-bradesco-black {
        background-color: #000000;
        color: #FFFFFF;
        border: none;
    }

        .btn-bradesco-black:hover {
            background-color: #222222;
        }

    .table thead {
        background-color: #E60000;
        color: #FFFFFF;
    }

    .table tbody tr:hover {
        background-color: #f8f8f8;
    }

    h2 {
        color: #E60000;
        font-weight: 600;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .modal-header {
        background-color: #E60000;
        color: #FFFFFF;
    }

    .modal-footer .btn-primary {
        background-color: #E60000;
        border: none;
    }

        .modal-footer .btn-primary:hover {
            background-color: #B20000;
        }

    .modal-footer .btn-secondary {
        background-color: #000000;
        border: none;
        color: #FFFFFF;
    }

        .modal-footer .btn-secondary:hover {
            background-color: #222222;
        }

    .form-check-label {
        margin-right: 15px;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2>Cadastro de Equipamentos</h2>
        <button type="button" class="btn btn-bradesco-red mb-2" data-bs-toggle="modal" data-bs-target="#createEquipamentoModal">
            Novo Equipamento
        </button>
    </div>

    <div class="card p-3">
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle mb-0">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Número de Série</th>
                        <th>Tipo</th>
                        <th>Data de Aquisição</th>
                        <th>Status</th>
                        <th style="width:180px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.Nome</td>
                            <td>@e.NumeroSerie</td>
                            <td>@e.Tipo</td>
                            <td>@e.DataAquisicao.ToShortDateString()</td>
                            <td>@(e.Status ? "Ativo" : "Inativo")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-bradesco-black me-2 edit-btn"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editEquipamentoModal-@e.CodEquipamento"
                                        value="@e.CodEquipamento">
                                    Editar
                                </button>
                                <button type="button" class="btn btn-sm btn-bradesco-red delete-btn"
                                        data-id="@e.CodEquipamento" onclick="DeletarEquipamento(this)">
                                    Excluir
                                </button>
                            </td>
                        </tr>

                        <!-- Modal de edição -->
                        <div class="modal fade" id="editEquipamentoModal-@e.CodEquipamento" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <form class="editEquipamentoForm" data-id="@e.CodEquipamento">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Editar Equipamento</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="alert-placeholder"></div> <!-- mensagens aparecem aqui -->
                                            <input type="hidden" name="CodEquipamento" value="@e.CodEquipamento" />
                                            <input type="text" name="Nome" value="@e.Nome" class="form-control mb-3" placeholder="Nome" />
                                            <input type="text" name="NumeroSerie" value="@e.NumeroSerie" class="form-control mb-3" placeholder="Número de Série" />
                                            <input type="text" name="Tipo" value="@e.Tipo" class="form-control mb-3" placeholder="Tipo" />
                                            <input type="date" name="DataAquisicao" value="@e.DataAquisicao.ToString("yyyy-MM-dd")" class="form-control mb-3" />
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="Status-@e.CodEquipamento" value="true" @(e.Status ? "checked" : "") />
                                                <label class="form-check-label">Ativo</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="Status-@e.CodEquipamento" value="false" @(!e.Status ? "checked" : "") />
                                                <label class="form-check-label">Inativo</label>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                            <button type="submit" class="btn btn-primary">Salvar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal de criação -->
<div class="modal fade" id="createEquipamentoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form class="createEquipamentoForm">
                <div class="modal-header">
                    <h5 class="modal-title">Novo Equipamento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert-placeholder"></div> <!-- mensagens aparecem aqui -->
                    <input type="text" name="Nome" class="form-control mb-3" placeholder="Nome" />
                    <input type="text" name="NumeroSerie" class="form-control mb-3" placeholder="Número de Série" />
                    <input type="text" name="Tipo" class="form-control mb-3" placeholder="Tipo" />
                    <input type="date" name="DataAquisicao" class="form-control mb-3" />
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Status-create" value="true" checked />
                        <label class="form-check-label">Ativo</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Status-create" value="false" />
                        <label class="form-check-label">Inativo</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Equipamento.js"></script>
}