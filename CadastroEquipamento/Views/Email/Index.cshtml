@model IEnumerable<CadastroEquipamento.Web.Models.LogEmailVinculoViewModel>

<h2>Logs de E-mails</h2>

@if (!Model.Any())
{
    <div class="text-muted">Nenhum e-mail registrado.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Usuário</th>
                <th>Equipamento</th>
                <th>Tipo</th>
                <th>Data do Envio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.NomeUsuario</td>
                    <td>@log.NomeEquipamento</td>
                    <td>
                        @(log.TipoVinculo == 1 ? "Vínculo" : log.TipoVinculo == 2 ? "Desvínculo" : "Desconhecido")
                    </td>
                    <td>@log.DataEnvioEmail.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
