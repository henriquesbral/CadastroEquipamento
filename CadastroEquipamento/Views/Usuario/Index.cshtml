@model IEnumerable<CadastroEquipamento.Web.Models.UsuarioViewModel>
@{
    ViewData["Title"] = "Usuarios";
}

<style>
    /* Cores Bradesco */
    .btn-bradesco-red {
        background-color: #E60000;
        color: #FFFFFF;
        border: none;
    }

        .btn-bradesco-red:hover {
            background-color: #B20000;
            color: #FFFFFF;
        }

    .btn-bradesco-black {
        background-color: #000000;
        color: #FFFFFF;
        border: none;
    }

        .btn-bradesco-black:hover {
            background-color: #222222;
        }

    .table thead {
        background-color: #E60000;
        color: #FFFFFF;
    }

    .table tbody tr:hover {
        background-color: #f8f8f8;
    }

    h2 {
        color: #E60000;
        font-weight: 600;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .modal-header {
        background-color: #E60000;
        color: #FFFFFF;
    }

    .modal-footer .btn-primary {
        background-color: #E60000;
        border: none;
    }

        .modal-footer .btn-primary:hover {
            background-color: #B20000;
        }

    .modal-footer .btn-secondary {
        background-color: #000000;
        border: none;
        color: #FFFFFF;
    }

        .modal-footer .btn-secondary:hover {
            background-color: #222222;
        }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2>Cadastro de Usuários</h2>
        <button type="button" class="btn btn-bradesco-red mb-2" data-bs-toggle="modal" data-bs-target="#createUsuarioModal">
            Novo Usuário
        </button>
    </div>

    <div class="card p-3">
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle mb-0">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Departamento</th>
                        <th style="width:180px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.Nome</td>
                            <td>@e.Email</td>
                            <td>@e.Departamento</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-bradesco-black me-2 edit-btn"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editUsuarioModal"
                                        data-id="@e.CodUsuario"
                                        data-nome="@e.Nome"
                                        data-email="@e.Email"
                                        data-departamento="@e.Departamento">
                                    Editar
                                </button>
                                <button type="button" class="btn btn-sm btn-bradesco-red delete-btn"
                                        data-id="@e.CodUsuario" onclick="DeletarUsuario(this)">
                                    Excluir
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal de edição -->
<div class="modal fade" id="editUsuarioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form class="editUsuarioForm">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Usuário</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="CodUsuario" />
                    <input type="text" name="Nome" class="form-control mb-3" placeholder="Nome" />
                    <input type="email" name="Email" class="form-control mb-3" placeholder="Email" />
                    <input type="text" name="Departamento" class="form-control mb-3" placeholder="Departamento" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal de criação -->
<div class="modal fade" id="createUsuarioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form class="createUsuarioForm">
                <div class="modal-header">
                    <h5 class="modal-title">Novo Usuário</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="text" id="nome" name="Nome" class="form-control mb-3" placeholder="Nome" />
                    <input type="email" id="email" name="Email" class="form-control mb-3" placeholder="Email" />
                    <input type="text" id="departamento" name="Departamento" class="form-control mb-3" placeholder="Departamento" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Usuario.js"></script>
}
