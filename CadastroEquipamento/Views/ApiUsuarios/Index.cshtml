@model IEnumerable<CadastroEquipamento.Web.Models.ApiUsuariosViewModel>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-3 border-0">
        <div class="card-header text-white text-center py-3" style="background-color:#cc092f;">
            <h3 class="mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead style="background-color:#f4f4f4; color:#333;">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Email</th>
                            <th scope="col">Telefone</th>
                            <th scope="col">Empresa</th>
                            <th scope="col">Cidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="fw-bold text-secondary">@user.Id</td>
                                <td>@user.Nome</td>
                                <td>@user.Email</td>
                                <td>@user.Telefone</td>
                                <td>@user.Empresa</td>
                                <td>@user.Cidade</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    table thead th {
        font-weight: 900;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    table tbody tr:hover {
        background-color: #ffe6eb;
        transition: 0.2s;
    }

    .card {
        border-radius: 5px;
    }
</style>